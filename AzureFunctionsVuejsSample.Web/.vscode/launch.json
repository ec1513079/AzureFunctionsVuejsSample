{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // Vue.jsをChromeでデバッグするLaunch設定
        // 1. VSCodeの拡張機能で「Debugger for Chrome」をインストール
        // 2. npm run devでVue.jsを立ち上げる
        // 3. F5でデバッグを開始
        // 4. jsのコード内でブレークポイントを貼ればそこで止まるようになります
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "sourceMaps": true,
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}"
        }
    ]
}